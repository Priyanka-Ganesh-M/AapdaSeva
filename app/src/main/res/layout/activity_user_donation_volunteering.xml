<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Page Title -->
    <TextView
        android:id="@+id/heading_donate"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@color/appheader"
        android:gravity="center"
        android:text="Support Options"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp">


    <!-- Buttons for Donate Resources, Donate Funds, Volunteer, and Others -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Donate Resources -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_donate_res"
                android:layout_width="120dp"
                android:layout_height="103dp"
                android:background="@drawable/donate"
                android:onClick="onDonateResourcesClick"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/donate_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donate Resources"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Donate Funds -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_donate_funds"
                android:layout_width="124dp"
                android:layout_height="93dp"
                android:background="@drawable/donate_funds"
                android:onClick="onDonateFundsClick"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/donate_funds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donate Funds"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Volunteer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_volunteer"
                android:layout_width="125dp"
                android:layout_height="107dp"
                android:background="@drawable/volunteer"
                android:onClick="onVolunteerClick"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/volunteer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volunteer"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Others -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_others"
                android:layout_width="130dp"
                android:layout_height="112dp"
                android:background="@drawable/others"
                android:onClick="onOtherOptionsClick"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
